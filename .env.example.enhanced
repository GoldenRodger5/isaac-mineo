# Comprehensive Environment Configuration for Enhanced Code Explainer
# Copy this to .env and fill in your actual values

# ===== Authentication Configuration =====
# JWT Secret Key (generate a strong random key for production)
JWT_SECRET_KEY=your_jwt_secret_key_here_make_it_strong_and_random

# ===== AI Service Configuration =====
# Anthropic Claude API Key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI Configuration (for fallback or additional features)
OPENAI_API_KEY=your_openai_api_key_here

# ===== GitHub Integration =====
# GitHub Personal Access Token (for repository access)
GITHUB_API_TOKEN=your_github_personal_access_token_here

# ===== Database & Caching =====
# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=isaac-info

# Redis Configuration (for caching and rate limiting)
REDIS_URL=your_redis_url_here
# Example: redis://localhost:6379 for local development
# Example: rediss://username:password@host:port for production

# ===== Email Configuration =====
SENDER_EMAIL=noreply@isaacmineo.com
SENDER_PASSWORD=your_app_password_here

# ===== Application Configuration =====
# Environment (development, staging, production)
ENVIRONMENT=development
DEBUG=true

# Security Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://isaac-mineo.vercel.app,https://isaacmineo.com,https://www.isaacmineo.com

# Rate Limiting Configuration
MAX_EXPLANATION_REQUESTS_PER_HOUR=50
MAX_API_REQUESTS_PER_HOUR=200
MAX_AUTH_ATTEMPTS_PER_15MIN=5

# ===== Performance Configuration =====
# Cache TTL in seconds
EXPLANATION_CACHE_TTL=7200
FILE_CONTENT_CACHE_TTL=3600
REPO_TREE_CACHE_TTL=1800

# Code Analysis Limits
MAX_CODE_SIZE_BYTES=100000
MAX_STREAMING_CHUNK_SIZE=50

# ===== Domain Configuration =====
DOMAIN=isaacmineo.com
API_BASE_URL=https://isaac-mineo-api.onrender.com/api

# ===== Testing Configuration =====
# Set to true when running tests
TESTING=false

# Test Database URL (separate from production)
TEST_REDIS_URL=redis://localhost:6379/1

# ===== Monitoring and Analytics =====
# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ===== Feature Flags =====
# Enable/disable specific features
ENABLE_CODE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_AUTHENTICATION=false
ENABLE_FOLLOW_UP_QUESTIONS=true
ENABLE_BATCH_EXPLANATIONS=true
ENABLE_EXPLANATION_EXPORT=true

# ===== Security Headers =====
# Content Security Policy
CSP_POLICY=default-src 'self'

# ===== Development Configuration =====
# Local development ports
DEV_FRONTEND_PORT=5173
DEV_BACKEND_PORT=8000

# ===== Production Configuration =====
# Production URLs
PRODUCTION_FRONTEND_URL=https://isaacmineo.com
PRODUCTION_BACKEND_URL=https://isaac-mineo-api.onrender.com

# SSL/TLS Configuration
SSL_REDIRECT=true
HSTS_MAX_AGE=31536000

# ===== Advanced Features =====
# Multi-language support
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr

# Code explanation models
PRIMARY_AI_MODEL=claude-sonnet-4-20250514
FALLBACK_AI_MODEL=gpt-4

# File size limits
MAX_FILE_SIZE_MB=10
MAX_REPO_FILES=1000

# ===== Health Check Configuration =====
HEALTH_CHECK_INTERVAL=300
GITHUB_API_TIMEOUT=30
AI_API_TIMEOUT=60

# ===== Backup and Recovery =====
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
MAX_BACKUP_COUNT=7
