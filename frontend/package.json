  "type": "module",
  "description": "Isaac Mineo's personal portfolio website",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "deploy": "npm run build && vercel --prod",
    "init-knowledge": "node scripts/initializeKnowledgeBase.js",
    "test-chatbot": "node scripts/testChatbot.js",
    "setup": "npm install && python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt && npm run init-knowledge",
    "activate-python": "source venv/bin/activate",
    "python-test": "source venv/bin/activate && python -c 'import openai, pinecone_client, redis; print(\"All Python packages working!\")'",
    "health-check": "curl -X GET http://localhost:5173/api/health || echo 'Server not running'",
    "generate-sitemap": "node scripts/generateSitemap.js",
    "seo-check": "echo 'üîç SEO Status Check:' && echo '‚úÖ Sitemap:' && ls -la public/sitemap.xml && echo '‚úÖ Robots:' && ls -la public/robots.txt"
  },
  "keywords": [
    "portfolio",
    "react",
    "vite",
    "tailwind"
  ],
  "author": "Isaac Mineo",
  "license": "MIT",
