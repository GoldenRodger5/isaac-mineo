    "@testing-library/user-event": "^14.5.2",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "autoprefixer": "^10.4.0",
    "jsdom": "^24.1.3",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.6.1"
  }
}
