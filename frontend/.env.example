# Frontend Environment Configuration Template
# Copy this to .env.local and fill in your values

# Site Protection
VITE_SITE_PASSWORD=portfolio2024

# API Configuration
VITE_API_BASE_URL=https://your-backend-url.onrender.com/api
VITE_BACKEND_URL=https://your-backend-url.onrender.com

# AI Configuration (if using frontend-only mode)
OPENAI_API_KEY=your-openai-api-key-here
PINECONE_API_KEY=your-pinecone-api-key-here

# Analytics (optional)
VITE_GA_TRACKING_ID=your_google_analytics_id

# Environment
VITE_ENVIRONMENT=production

# Required for vector search (get from Pinecone dashboard)
PINECONE_API_KEY=your-pinecone-api-key-here

# Optional: Redis URL for caching (defaults to localhost:6379)
# For production, use Redis Cloud or similar service
REDIS_URL=redis://localhost:6379

# Optional: Custom cache TTL settings (in seconds)
CACHE_EMBEDDING_TTL=86400
CACHE_RESPONSE_TTL=1800
CACHE_SESSION_TTL=7200

# Optional: Rate limiting settings
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=3600

# Development settings
NODE_ENV=development