# Environment variables for Isaac Mineo Portfolio
# Create a .env.local file with your actual values

# Password for accessing the site
VITE_SITE_PASSWORD=your_password_here

# Enhanced AI Chatbot - Environment Variables

# Required for AI functionality
OPENAI_API_KEY=your-openai-api-key-here

# Required for vector search (get from Pinecone dashboard)
PINECONE_API_KEY=your-pinecone-api-key-here

# Optional: Redis URL for caching (defaults to localhost:6379)
# For production, use Redis Cloud or similar service
REDIS_URL=redis://localhost:6379

# Optional: Custom cache TTL settings (in seconds)
CACHE_EMBEDDING_TTL=86400
CACHE_RESPONSE_TTL=1800
CACHE_SESSION_TTL=7200

# Optional: Rate limiting settings
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=3600

# Development settings
NODE_ENV=development